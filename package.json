{
  "name": "tools",
  "version": "1.0.0",
  "description": "tools",
  "main": "src/main/index.js",
  "scripts": {
    "start": "nodemon --watch src/main/index.js --exec 'electron .'",
    "electron": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "tools",
    "asar": true,
    "files": [
      "**/*",
      "!src/vue-render/node_modules/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "background": "build/appdmg.png",
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caveman1234/tools.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/caveman1234/tools/issues"
  },
  "homepage": "https://github.com/caveman1234/tools#readme",
  "devDependencies": {
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "nodemon": "^2.0.2"
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "node-xlsx": "^0.15.0",
    "xlsx": "^0.15.4"
  }
}
